@model FINAL.Models.CartModel

<table>
    <tr>
        <td class="cart-3-td1"><p>@Html.ActionLink("Thêm Sản Phẩm Khác", "StoreHome","Store")</p></td>
        <td class="cart-3-td2">
            <p><i style='font-size:18px; margin: 0px 5px ; color: #ee4d2d;' class='fas'>&#xf02b;</i>Shopee Voucher</p>
        </td>
        <td class="cart-3-td3">
            <a>Chọn hoặc nhập mã</a>
        </td>
    </tr>
    <tr>
        <td class="cart-3-td1"></td>
        <td class="cart-3-td2">
            <p style="font-size: 14px;"><i style='font-size: 18px; margin: 0px 5px; color: yellowgreen;' class='fab'>&#xf379;</i>Shopee Xu</p>
            <p style="font-size: 14px; color: #929292; margin: 2px 0 0 17px;">Dùng 100 Shopee Xu <i style='font-size:12px' class='far'>&#xf059;</i></p>
        </td>
        <td class="cart-3-td3"></td>
    </tr>
    <tr>
        <td class="cart-3-td1">
            <div style="display: flex;">
                <div class="cart-3-td1-1"><input type="checkbox" name="name" value="" /></div>
                <div class="cart-3-td1-2">
                    <div><p>Chọn Tất Cả (@ViewBag.Quantity)</p></div>
                </div>
                <div class="cart-3-td1-3">
                    <div><p>Xóa</p></div>
                </div>
                <div class="cart-3-td1-4">
                    <div><p>Bỏ sản phẩm không hoạt động</p></div>
                </div>
            </div>
        </td>
        <td class="cart-3-td2">
            <div style="display: flex;">
                <div>
                    <p style="line-height: 34px;">Tổng thanh toán (@ViewBag.Quantity Sản Phẩm): </p>
                </div>
                <div style="margin-left: 5px;">
                    <p style="font-size: 24px; color: #ee4d2d;"><sup style="text-decoration: underline;">đ</sup>@string.Format("{0:#,0}", @ViewBag.Cost)</p>
                </div>
            </div>
        </td>
        <td class="cart-3-td3">
            <div>
                @using (Html.BeginForm("Pay", "Cart"))
                {
                    <input type="submit" value="Mua Hàng" class="btn btn-success" />
                }
            </div>
        </td>
    </tr>
</table>


