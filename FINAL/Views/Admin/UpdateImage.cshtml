@model FINAL.Models.Products

@{
    ViewBag.Title = "UpdateProduct";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("UpdateImage", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    FINAL.Models.ShopeeEntities db = new FINAL.Models.ShopeeEntities();
    <div class="content">
        <div class="add1-header">Cập nhật sản phẩm</div>
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ProID)
            @Html.HiddenFor(model => model.ProName)
            @Html.HiddenFor(model => model.ProColor)
            @Html.HiddenFor(model => model.CagetoryID)
            @Html.HiddenFor(model => model.Price)

            <div class="form-group">
                <label class="control-label col-md-2">Hình ảnh</label>
                <div class="col-md-10">
                    <input type="file" name="fileAnhMoi" />
                    @Html.ValidationMessageFor(model => model.ProImage, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Update" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}

